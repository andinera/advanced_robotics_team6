<launch>
    <node name="ir_bottom_pid" pkg="pid" type="controller" output="screen" >
        <!-- Kp, Ki, Kd should either all be positive or all be negative -->
        <param name="Kp" value="-7.0" />
        <param name="Ki" value="-5.0" />
        <param name="Kd" value="0.0" />
        <!-- [-1905, 1905] because 6000 - 1905 = 4095 and 6000 + 1905 = 7905 -->
        <param name="upper_limit" value="1905" />
        <param name="lower_limit" value="-1905" />
        <!-- Advanced parameters -->
        <param name="windup_limit" value="10" />
        <param name="cutoff_frequency" value="20" />
        <!-- Topic names -->
        <param name="topic_from_controller" value="sensor/bottom_IR/pid/control_effort" />
        <param name="topic_from_plant" value="sensor/bottom_IR/pid/state" />
        <param name="setpoint_topic" value="sensor/bottom_IR/pid/setpoint" />
        <param name="pid_enable_topic" value="sensor/bottom_IR/pid/enable" />
        <!-- Node name -->
        <param name="node_name" value="steering_pid" />
        <!-- Bounds for publishing and subscribing at 50 Hz -->
        <param name="max_loop_frequency" value="55.0" />
        <param name="min_loop_frequency" value="45.0" />
     </node>

    <node name="ir_top_pid" pkg="pid" type="controller" output="screen" >
        <!-- Kp, Ki, Kd should either all be positive or all be negative -->
        <param name="Kp" value="-1.0" />
        <param name="Ki" value="-0.0" />
        <param name="Kd" value="0.0" />
        <!-- [-1905, 1905] because 6000 - 1905 = 4095 and 6000 + 1905 = 7905 -->
        <param name="upper_limit" value="1905" />
        <param name="lower_limit" value="-1905" />
        <!-- Advanced parameters -->
        <param name="windup_limit" value="10" />
        <param name="cutoff_frequency" value="20" />
        <!-- Topic names -->
        <param name="topic_from_controller" value="sensor/top_IR/pid/control_effort" />
        <param name="topic_from_plant" value="sensor/top_IR/pid/state" />
        <param name="setpoint_topic" value="sensor/top_IR/pid/setpoint" />
        <param name="pid_enable_topic" value="sensor/top_IR/pid/enable" />
        <!-- Node name -->
        <param name="node_name" value="steering_pid" />
        <!-- Bounds for publishing and subscribing at 50 Hz -->
        <param name="max_loop_frequency" value="55.0" />
        <param name="min_loop_frequency" value="45.0" />
     </node>

     <node pkg="advanced_robotics_team6" type="ros_pid_official.py" name="odroid_node" output="screen" />

    <!--
