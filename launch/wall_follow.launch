<launch>

    <arg name="offline" default="false" />
    <arg name="dev" default="" />
    <arg name="dope" default="false" />
    <arg name="smach" default="false" />

    <!-- If not connected to robot -->
    <group if="$(arg offline)">
        <!-- Dummy node for sending IMU data -->
        <node pkg="advanced_robotics_team6" type="dummy_phidgets_imu.py" name="dummy_phidgets_imu_node" output="screen">
            <rosparam command="load" file="$(find advanced_robotics_team6)/params/sensor_output.yaml" />
        </node>

        <!-- Dummy node for sending IR data -->
        <node pkg="advanced_robotics_team6" type="dummy_pololu_node.py" name="dummy_pololu_node" output="screen" >
            <rosparam command="load" file="$(find advanced_robotics_team6)/params/sensor_output.yaml" />
        </node>
    </group>

    <!-- If connected to robot -->
    <group unless="$(arg offline)">
        <!-- Node for sending IMU data -->
        <node pkg="phidgets_imu" type="phidgets_imu_node" name="phidgets_imu_node" output="screen">
            <!-- period=4 ==> 250 Hz -->
            <param name="period" value="4"/>
        </node>

        <!-- Node for sending IR data -->
        <node pkg="advanced_robotics_team6" type="pololu_node.py" name="pololu_node" output="screen" >
            <rosparam command="load" file="$(find advanced_robotics_team6)/params/sensor_output.yaml" />
        </node>
    </group>

    <!-- Initialize madgwick filter -->
    <node pkg="imu_filter_madgwick" name="madgwick" type="imu_filter_node" clear_params="true">
        <rosparam command="load" file="$(find advanced_robotics_team6)/params/imu_filter_madgwick.yaml" />
    </node>

    <!-- Initialize bottom IR PID -->
    <node name="ir_bottom_pid" pkg="pid" type="controller" output="screen" >
        <rosparam unless="$(arg dope)" command="load" file="$(find advanced_robotics_team6)/params/bottom_ir_pid.yaml"/>
        <rosparam if="$(arg dope)" command="load" file="$(find advanced_robotics_team6)/params/kodie/top_ir_pid.yaml"/>
    </node>

     <!-- Initialize top IR PID -->
    <node name="ir_top_pid" pkg="pid" type="controller" output="screen" >
        <rosparam unless="$(arg dope)" command="load" file="$(find advanced_robotics_team6)/params/top_ir_pid.yaml"/>
        <rosparam if="$(arg dope)" command="load" file="$(find advanced_robotics_team6)/params/kodie/top_ir_pid.yaml"/>
    </node>

    <!-- Initialize wall IMU PID -->
    <node name="imu_wall_pid" pkg="pid" type="controller" output="screen" >
        <rosparam command="load" file="$(find advanced_robotics_team6)/params/imu_wall_pid.yaml"/>
    </node>

    <!-- Initialize cornering IMU PID -->
    <node name="imu_corner_pid" pkg="pid" type="controller" output="screen" >
        <rosparam command="load" file="$(find advanced_robotics_team6)/params/imu_corner_pid.yaml"/>
    </node>

    <!-- Initialize main node -->
    <node pkg="advanced_robotics_team6" type="wall_follow.py" name="odroid_node" output="screen">
        <rosparam command="load" file="$(find advanced_robotics_team6)/params/wall_follow.yaml" />
        <param name="developer" value="$(arg dev)" />
        <param name="smach" value="$(arg smach)" />
    </node>

</launch>
